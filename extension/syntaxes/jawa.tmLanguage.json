{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jawa",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jawa",
          "match": "//.*$"
        },
        {
          "name": "comment.block.jawa",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jawa",
          "match": "\\b(menawa|yen|liyane|ngulang|return)\\b"
        },
        {
          "name": "constant.language.jawa",
          "match": "\\b(bener|salah|NULL)\\b"
        },
        {
          "name": "storage.type.jawa",
          "match": "\\b(owahi|JawaFile)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.jawa",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.jawa",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.jawa",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.float.jawa",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.jawa",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.jawa",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.jawa",
          "match": "==|!=|>|<|>=|<="
        },
        {
          "name": "keyword.operator.logical.jawa",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.jawa",
          "match": "\\b(cithak|file_buka|file_tutup|file_tulis|file_tulis_baris|file_waca_kabeh|file_waca_baris|file_ada|file_hapus|file_akhir|file_info|system)\\b"
        },
        {
          "name": "support.function.string.jawa",
          "match": "\\b(length|dawane|toUpperCase|menyang_gedhe|toLowerCase|menyang_cilik|substring|potong|replace|ganti|split|pisah)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.jawa",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.jawa"
}
