// Comprehensive Jawa Language Test
cithak "=== Testing All Language Features ==="

// Variables and arithmetic
owahi hasil: int = 0
cendhak faktor: int = 2
ajek pi: double = 3.14159

cithak "Initial values:"
cithak "hasil:", hasil, "faktor:", faktor, "pi:", pi

// Arithmetic operations
hasil = 10 + 5 * faktor
cithak "After calculation: hasil =", hasil

// Boolean expressions  
owahi aktif: bool = true
cithak "Boolean value:", aktif

// For loop with if-else inside
cithak "=== For Loop with Conditionals ==="
ngulang (owahi i: int = 1; i <= 5; i = i + 1) {
    yen (i % 2 == 0) {
        cithak "Even number:", i
    } liyane {
        cithak "Odd number:", i
    }
}

// While loop with multiple conditions
cithak "=== While Loop Test ==="
owahi counter: int = 0
menawa (counter < 3) {
    yen (counter == 0) {
        cithak "First iteration:", counter
    } liyane {
        cithak "Iteration:", counter
    }
    counter = counter + 1
}

// Nested conditionals
cithak "=== Nested Conditionals ==="
owahi nilai: int = 85
yen (nilai >= 80) {
    cithak "Grade A"
    yen (nilai >= 90) {
        cithak "Excellent!"
    } liyane {
        cithak "Good job!"
    }
} liyane {
    cithak "Grade B or below"
}

cithak "=== All Tests Complete ==="
