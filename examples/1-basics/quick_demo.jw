# 3. Smart Conditionals
owahi population = 15000000
yen (population > 10000000) {
    cithak("Megacity detected! Population: " + population)
} liyane {
    cithak("Regular city. Population: " + population)
}

# 4. Data Processing
owahi sensor_data = "temp:25,humidity:60,pressure:1013"
owahi readings = sensor_data.split(",")
cithak("Sensor readings (" + readings.dawane + " items):")
cithak("  Raw data: " + sensor_data)

