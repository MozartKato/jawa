cithak("")

# ====== 5. CONDITIONALS WITH JAVANESE KEYWORDS ======
cithak("5. Control Flow:")
owahi score = 85
owahi user_type = "premium"

yen (score >= 90) {
    cithak("  Grade: A - Excellent!")
} liyane yen (score >= 80) {
    cithak("  Grade: B - Good! Score: " + score)
} liyane yen (score >= 70) {
    cithak("  Grade: C - Average")
} liyane {
    cithak("  Grade: D - Needs improvement")
}

yen (user_type == "premium" && score >= 80) {
    cithak("  Access: Premium features unlocked")
} liyane {
    cithak("  Access: Standard features only")
}
cithak("")

# ====== 6. LOOPS ======
cithak("6. Loops and Iteration:")

# For loop
cithak("  Countdown:")
ngulang (owahi i = 5; i >= 1; i = i - 1) {
    cithak("    " + i + "...")
}
cithak("    Go!")

# While loop
cithak("  Powers of 2:")
owahi power = 1
owahi count = 0
menawa (count < 6) {
    cithak("    2^" + count + " = " + power)
    power = power * 2
    count = count + 1
}
cithak("")

# ====== 7. STRING ANALYSIS ======
cithak("7. String Analysis:")
owahi text = "Jawa Programming Language brings Javanese culture to coding"
owahi length = text.length
owahi upper_version = text.toUpperCase()
owahi has_java = salah

# Check if contains "Java"
owahi java_check = text.replace("Java", "FOUND")
yen (java_check != text) {
    has_java = bener
}

cithak("  Text: " + text)
cithak("  Length: " + length + " characters")
cithak("  Upper: " + upper_version)
cithak("  Contains 'Java': " + has_java)
cithak("")

