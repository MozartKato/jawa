# ====== 2. STRING OPERATIONS (DUAL LANGUAGE) ======
cithak("2. String Operations - Dual Language Support:")
owahi sample = "Sugeng Rawuh ing Jawa Programming"

# English methods
cithak("  English methods:")
cithak("    toUpperCase: " + sample.toUpperCase())
cithak("    toLowerCase: " + sample.toLowerCase())
cithak("    replace: " + sample.replace("Rawuh", "Enjing"))
cithak("    substring: " + sample.substring(0, 12))

# Javanese methods  
cithak("  Javanese methods:")
cithak("    menyang_gedhe: " + sample.menyang_gedhe())
cithak("    menyang_cilik: " + sample.menyang_cilik())
cithak("    ganti: " + sample.ganti("Programming", "Pemrograman"))
cithak("    potong: " + sample.potong(7, 13))
cithak("")

# ====== 3. METHOD CHAINING ======
cithak("3. Method Chaining:")
owahi chained_en = sample.replace("Programming", "Language").toUpperCase().substring(0, 20)
owahi chained_jw = sample.ganti("Rawuh", "Enjing").menyang_cilik().potong(0, 25)

cithak("  English chain: " + chained_en)
cithak("  Javanese chain: " + chained_jw)
cithak("")

