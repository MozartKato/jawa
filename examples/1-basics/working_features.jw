# ====== 9. BOOLEAN LOGIC ======
cithak("9. Boolean Logic:")
owahi is_ready = bener
owahi is_testing = salah
owahi is_production = salah

yen (is_ready && !is_testing) {
    cithak("  Status: Ready for production")
} liyane yen (is_ready && is_testing) {
    cithak("  Status: In testing phase")  
} liyane {
    cithak("  Status: Not ready")
}

# Complex boolean with mixed keywords
owahi english_bool = true
owahi javanese_bool = bener
yen (english_bool == javanese_bool) {
    cithak("  Boolean compatibility: Perfect!")
} liyane {
    cithak("  Boolean compatibility: Issue detected")
}
cithak("")

